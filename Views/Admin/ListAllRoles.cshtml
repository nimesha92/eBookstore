@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "All roles";
}

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>All roles</h1>
        <a class="btn btn-primary" asp-action="AddRole">
            <i class="fa-solid fa-users"></i> Add role
        </a>
    </div>

    @if (Model.Any())
    {
            <table class="table table-striped table-hover">
                <thead class="bg-dark text-white">
                    <tr>
                        <th>Role</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var role in Model)
                {
                            <tr>
                                <td>@role.Name</td>
                                <td class="text-center">
                                    <a asp-action="EditRole" asp-route-id="@role.Id" class="btn btn-primary btn-sm">
                                        <i class="fa-solid fa-pen-to-square"></i>
                                    </a>
                                    <a asp-action="DeleteRole" asp-route-id="@role.Id" class="btn btn-danger btn-sm">
                                        <i class="fa-solid fa-trash-can"></i>
                                    </a>
                                </td>
                            </tr>
                }
                </tbody>
            </table>
    }
    else
    {
            <div class="alert alert-info">
                <i class="fa-solid fa-info-circle"></i> No roles yet, use the button above to add your first role.
            </div>
    }
</div>
