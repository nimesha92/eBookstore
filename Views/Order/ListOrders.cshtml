@model IEnumerable<BookStore.Models.Order>
@using BookStore.Helpers

<h1>Orders</h1>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Order Date</th>
            <th>Order Total</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
                    <tr>
                        <td>@order.Id</td>
                        <td>@order.OrderPlaced.ToString("yyyy-MM-dd HH:mm:ss")</td>
                        <td>@Html.DisplayPrice(order.OrderTotal)</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-primary">View</a>
                            <a asp-action="DeleteOrder" asp-route-id="@order.Id" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
        }
    </tbody>
</table>

