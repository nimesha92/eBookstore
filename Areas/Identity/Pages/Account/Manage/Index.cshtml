@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="container my-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-header text-center">
                    <h4 class="mb-0">
                        <i class="fas fa-user-circle fa-2x"></i> @ViewData["Title"]
                    </h4>
                </div>
                <div class="card-body">
                    <partial name="_StatusMessage" model="Model.StatusMessage" />
                    <form id="profile-form" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Username">
                                <i class="fas fa-user"></i> Username
                            </label>
                            <input asp-for="Username" class="form-control" disabled />
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.FirstName">
                                <i class="fas fa-user"></i> First Name
                            </label>
                            <input asp-for="Input.FirstName" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.LastName">
                                <i class="fas fa-user"></i> Last Name
                            </label>
                            <input asp-for="Input.LastName" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Address">
                                <i class="fas fa-map-marker-alt"></i> Address
                            </label>
                            <input asp-for="Input.Address" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.ZipCode">
                                <i class="fas fa-map-pin"></i> Zip Code
                            </label>
                            <input asp-for="Input.ZipCode" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.City">
                                <i class="fas fa-city"></i> City
                            </label>
                            <input asp-for="Input.City" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.PhoneNumber">
                                <i class="fas fa-phone"></i> Phone Number
                            </label>
                            <input asp-for="Input.PhoneNumber" class="form-control" />
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group text-center">
                            <button id="update-profile-button" type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Save
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
<link rel="stylesheet" href="~/css/login.css" />

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}
